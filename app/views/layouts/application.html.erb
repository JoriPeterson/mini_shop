<!DOCTYPE html>
<html>
  <head>
    <title>MiniShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"%>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <style>
      body {
        <!-- background-color: LightGray; -->
      }

      .element {
        font-weight: bold;
        width: 320px;
        padding: 10px;
        border: 5px solid gray;
        margin: 15px;
        background-color: #e3f2fd;
        h4 {
          margin: 15px;
          p {
            margin-top: 5px;
            margin-bottom: 5px;
            margin-left: 25px;
          }
        }
      }

      h2 {
        width: 320px;
        padding: 10px;
        border: 5px solid gray;
        margin: 15px;
        background-color: #e3f2fd;
      }

      .link {
        border: 2px solid DogderBlue;
        margin-left: 55px;
        color: White;
        border-radius: 7px;
      }

    </style>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd; border-bottom: 5px solid gray; font-weight: bold;">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
      <a class="nav-item nav-link" <%=  link_to "Merchants Index", merchants_path %>
      <a class="nav-item nav-link" <%=  link_to "Items Index", items_path %>
      </div>
    </div>
  </nav>
    <%= yield %>
  </body>
</html>
