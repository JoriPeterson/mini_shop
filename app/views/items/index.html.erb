<h1>Items Index</h1>

<% @items.each do |item| %>
  <h2> Item Name: <%= item.name %></h2>
  <p> Description: <%= item.description %></p>
  <p> Price: <%= item.price %></p>
  <p> Image: <%= item.image %></p>
  <p> Active Status: <%= item.active_status %></p>
  <p> In Stock: <%= item.inventory %></p>
  <p> Merchant: <%= link_to item.merchant.name, merchant_path(item.merchant) %></p>
<% end %>
