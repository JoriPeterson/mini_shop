<%= form_tag merchant_path(@merchant), method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @merchant.name %><br/>

  <%= label_tag :address %>
  <%= text_field_tag :address, @merchant.address %><br/>

  <%= label_tag :city %>
  <%= text_field_tag :city, @merchant.city %><br/>

  <%= label_tag :state %>
  <%= text_field_tag :state, @merchant.state %><br/>

  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode, @merchant.zipcode %><br/>

  <%= submit_tag 'Submit Update' %>
<% end %>
